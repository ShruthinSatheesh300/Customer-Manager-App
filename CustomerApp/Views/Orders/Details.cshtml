@model IEnumerable<CustomerApp.Models.Orders>

@{
    ViewData["Title"] = "Index";
}


<div class="d-sm-inline-flex" style="margin-top:40px">
    <div style="font-size: 2rem;margin-left:60px;margin-right:10px">
        <i class="fas fa-briefcase"></i>
    </div>

    <h1>Orders for @ViewBag.Name</h1>
</div>



<p>
    <a class="btn btn-primary" asp-controller="Orders" asp-action="Create">Add New Items</a>
</p>



<table class="table">
    <tbody>
        
@foreach (var item in Model)
{
    <tr>
        <td colspan="4">
            @Html.DisplayFor(modelItem => item.ItemName) 
        </td>
        <td colspan="1">
            @Html.DisplayFor(modelItem => item.Price) .Rs
        </td>        
    </tr>
}

</tbody>
</table>
